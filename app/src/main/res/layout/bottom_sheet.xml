<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_peekHeight="90dp"

    >

<!--    app:behavior_hideable="false"-->
<!--    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">-->


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Status Menu" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Change the status of the movie" />

    <Button
        android:id="@+id/StatusWatchingButtond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currently watching"

        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="8dp"
        app:rippleColor="@color/colorGrey2"
        app:strokeColor="@color/colorGrey3"
        app:strokeWidth="2dp"

        />

    <Button
        android:id="@+id/StatusPlanedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Planned watching"

        app:cornerRadius="8dp"
        app:rippleColor="@color/colorGrey2"
        app:strokeColor="@color/colorGrey3"
        app:strokeWidth="2dp"
        app:backgroundTint="@android:color/transparent"

        />

    <Button
        android:id="@+id/StatusWatchedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie watched"

        app:cornerRadius="8dp"
        app:rippleColor="@color/colorGrey2"
        app:strokeColor="@color/colorGrey3"
        app:strokeWidth="2dp"
        app:backgroundTint="@android:color/transparent"

        />
<!--    app:backgroundTint="@android:color/transparent"-->

<!--    <Button-->
<!--        android:id="@+id/StatusWatchedButton"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Watched"-->

<!--        app:backgroundTint="@android:color/transparent"-->
<!--        app:cornerRadius="8dp"-->
<!--        app:rippleColor="@color/colorGrey2"-->
<!--        app:strokeColor="@color/colorGrey3"-->
<!--        app:strokeWidth="2dp"-->

<!--        />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/StatusCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/StatusSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save" />
    </LinearLayout>
</LinearLayout>